<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/fondoApp">


    <TextView
        android:id="@+id/txtNumero1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:textAlignment="center"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/txtOperador"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/txtNumero1"
        android:background="#fff"
        android:textAlignment="center"
        android:textSize="50dp"
        android:text="?"/>

    <TextView
        android:id="@+id/txtNumero2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/txtOperador"
        android:background="#fff"
        android:textAlignment="center"
        android:textSize="50dp" />

    <Button
    android:id="@+id/btnRandom"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@+id/txtNumero1"
    android:text="Generar Números"
    android:textSize="24dp"
    android:layout_marginTop="10dp"
    android:textColor="@color/letras"
    android:background="@color/btnRandom"/>

    <Button
        android:id="@id/btnSuma"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRandom"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/btnSuma"
        android:text="+"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRandom"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/btnSuma"
        android:background="@color/btnResta"
        android:text="-"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRandom"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/btnResta"
        android:background="@color/btnLimpiar"
        android:text="C"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnSuma"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="9dp"
        android:background="@color/btnMul"
        android:text="x"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSuma"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/btnMul"
        android:background="@color/btnDiv"
        android:text="/"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnPar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btnMul"
        android:layout_marginTop="10dp"
        android:text="¿Resultado es par?"
        android:textColor="@color/letras"
        android:textSize="24dp"
        android:background="@color/btnPar"/>
    <Button
        android:id="@+id/btnPrimo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btnPar"
        android:layout_marginTop="5dp"
        android:text="¿Resultado es Primo?"
        android:textColor="@color/letras"
        android:textSize="24dp"
        android:background="@color/btnMul"
        />

    <TextView
        android:id="@+id/label1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btnPrimo"
        android:layout_marginTop="8dp"
        android:background="@color/label"
        android:text="Resultado"
        android:textAlignment="center"
        android:textColor="@color/letras"
        android:textSize="30dp"

        />

    <TextView
        android:id="@+id/label2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/label1"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="@color/letras" />

    <TextView
        android:id="@+id/label3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/label2"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:background="@color/label" />


</RelativeLayout>